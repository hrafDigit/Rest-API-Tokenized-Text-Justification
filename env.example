# [FR]
# Configuration de l'Environnement
NODE_ENV=development
PORT=3000

# Configuration de la Base de Données
DB_HOST=localhost
DB_PORT=5432
DB_NAME=basededonnees
DB_USER=utilisateur
DB_PASS=motdepasse

# Configuration des Services Tiers
SENDGRID_API_KEY=cle_api_sendgrid
GOOGLE_MAPS_API_KEY=cle_api_google_maps

# Chemins des Fichiers
DOSSIER_TELEVERSEMENT=/telechargements
CHEMIN_FICHIER_LOG=/logs/app.log

# Configuration du Cache
REDIS_URL=redis://localhost:6379
TEMPS_EXPIRATION_CACHE=3600

# Configuration de la Messagerie
SMTP_HOST=smtp.exemple.com
SMTP_PORT=587
SMTP_USER=utilisateur_smtp
SMTP_PASS=mot_de_passe_smtp

# Configuration de Sécurité
TEMPS_SESSION=3600
SECRET_CSRF_TOKEN=jeton_csrf_secret
JWT_SECRET=jeton_jwt_secret

# Fonctionnalités
FONCTIONNALITE_X_ACTIVE=true
FONCTIONNALITE_Y_ACTIVE=false

# Paramètres de Localisation
LANGUE_PAR_DEFAUT=fr_FR
FORMAT_DATE=YYYY-MM-DD
ZONE_HORAIRE=Europe/Paris

# Clés API et Secrets
SECRET_KEY=cle_secrete
LIMITE_MOT_TOKEN=80000


# [EN]
# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydatabase
DB_USER=myuser
DB_PASS=mypassword

# Third-Party Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# File Paths
UPLOAD_DIRECTORY=/uploads
LOG_FILE_PATH=/logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_EXPIRATION_TIME=3600

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Security Configuration
SESSION_TIMEOUT=3600
CSRF_TOKEN_SECRET=your_csrf_token_secret
JWT_SECRET=your_jwt_secret

# Feature Flags
FEATURE_X_ENABLED=true
FEATURE_Y_ENABLED=false

# Localization Settings
DEFAULT_LANGUAGE=en_US
DATE_FORMAT=YYYY-MM-DD
TIME_ZONE=UTC

# API Keys and Secrets
SECRET_KEY=your_secret_key
TOKEN_WORD_LIMIT=80000
